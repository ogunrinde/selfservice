          <!-- Sidebar Toggle (Topbar) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none">
            <i class="fa fa-bars"></i>
          </button>

        </nav>
        <!-- End of Topbar -->

        <div class="container-fluid">
          <div class="alert alert-light" role="alert">
                <div class="row">
                    <div class="col-lg-2 text-center">
                        <h6 class="text-primary" style="font-weight: 500">Employee ID</h6>
                        <p><%=user.employee_ID%></p>
                    </div>
                    <div class="col-lg-2 text-center">
                            <h6 class="text-primary" style="font-weight: 500">Company</h6>
                            <p><%=user.company_name%></p>
                    </div>
                    <div class="col-lg-2 text-center">
                            <h6 class="text-primary" style="font-weight: 500">Leave Applicant</h6>
                            <p><%=user.name%></p>
                    </div>
                    <div class="col-lg-2 text-center">
                            <h6 class="text-primary" style="font-weight: 500">Branch</h6>
                            <p>Ecobank</p>
                    </div>
                    <div class="col-lg-2 text-center">
                            <h6 class="text-primary" style="font-weight: 500">Role</h6>
                            <p><%=user.role%></p>
                    </div>
                    <div class="col-lg-2 text-center">
                            <h6 class="text-primary" style="font-weight: 500">E-mail</h6>
                            <p><%=user.email%></p>
                    </div>
                </div>
          </div>
          
          <div class="card border-0 shadow mb-4">
            <div class="card-header border-0 py-3 d-flex flex-row align-items-center justify-content-between">
              <h6 class="m-0 font-weight-bold text-primary">Apply for Leave</h6>
            </div>
            <div class="card-body">
              <div>
              <div class="listitem">
                <ul class="list-group">
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    Leave Type
                    <span class="badge badge-pill" style="font-weight: 500;font-size: 14px;"><%=leave_data.leave_type%></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    Start Date
                    <span class="badge badge-pill" style="font-weight: 500;font-size: 14px;"><%=leave_data.start_date%></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    End Date
                    <span class="badge badge-pill" style="font-weight: 500;font-size: 14px;"><%=leave_data.end_date%></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    Applied Date
                    <span class="badge badge-pill" style="font-weight: 500;font-size: 14px;"><%=leave_data.date_created%></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    Reliever Required
                    <span class="badge badge-pill" style="font-weight: 500;font-size: 14px;"><%=leave_data.require_reliever%></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    Reliever Source
                    <span class="badge badge-pill" style="font-weight: 500;font-size: 14px;"><%=leave_data.reliever_source%></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    Reliever's Email
                    <span class="badge badge-pill" style="font-weight: 500;font-size: 14px;"><%=leave_data.reliever_email%></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    Reliever's Phone
                    <span class="badge badge-pill" style="font-weight: 500;font-size: 14px;"><%=leave_data.reliever_phone%></span>
                  </li>
                </ul>
              </div>   
              <div style="margin-top: 30px;">Manager's Remark</div><hr>
              <div class="row" style="width: 60%;margin-left:auto;margin-right: auto;">
                    <div class="checkerdiv" style ="">
                            <form method = "post" action = "/update_leave_request">
                             <label class="btnwrapper"><span class="label">Accept</span>
                                     <input type="radio" name="category" value="accept">
                                     <span class="checkmark"></span>
                             </label>
                             <label class="btnwrapper"><span class="label">Reject</span>
                                     <input type="radio" name="category" value="reject">
                                     <span class="checkmark"></span>
                             </label>
                             <label class="btnwrapper"><span class="label">Suspend</span>
                              <input type="radio" name="category" value="suspend">
                              <span class="checkmark"></span>
                            </label>
                            <label class="btnwrapper" style="display:none"><span class="label">Suspend</span>
                              <input type="text" name="staff_id" value="<%=user._id%>">
                              <% if(user.role == 'lManager'){ %>
                                <input type="text" name="manager" value="lManager">
                              <% }else { %>
                                <input type="text" name="manager" value="bManager">
                              <% } %>
                              <span class="checkmark"></span>
                            </label>
                            <div class="row text-center" style="margin-top: 2%;">
                              <div class="submit_btn" style="">
                                <input type="submit" value="Submit Request" class="btn btn-primary"/>    
                              </div>
                            </div>
                         </form>
                    </div>
              </div>
              <div>
                  
              </div>
              </div>  
              <div class="chart-area">
                <canvas id="myAreaChart"></canvas>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span></span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
